{
  "name": "taktische-zeichen-parent",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "lerna run clean",
    "build": "lerna run build",
    "build:website": "lerna run build:website",
    "test": "lerna run test",
    "format": "lerna run format",
